# Engine Results Viewer - Environment Variables Template
#
# Скопируй этот файл в .env и замени значения на реальные
# cp .env.example .env
#
# ⚠️ ВАЖНО: Никогда не коммить .env в Git! (он в .gitignore)

# ============================================
# Backend Environment
# ============================================

# Порт backend сервера
# По умолчанию: 3000
# ⚠️ Должен совпадать с config.yaml → server.port
PORT=3000

# Окружение (development, production, test)
NODE_ENV=development

# Хост сервера
HOST=localhost

# ============================================
# Paths
# ============================================

# Путь к папке с .det файлами
# По умолчанию: "./test-data"
# Можно указать абсолютный путь
FILES_PATH=./test-data

# Путь к config.yaml
# По умолчанию: "./config.yaml"
CONFIG_PATH=./config.yaml

# ============================================
# Frontend Environment
# ============================================

# URL backend API для production
# В dev режиме используется Vite proxy
# VITE_API_URL=http://localhost:3000

# ============================================
# Logging & Debug
# ============================================

# Уровень логирования (error, warn, info, debug)
LOG_LEVEL=info

# Включить verbose логирование (true/false)
VERBOSE=false

# ============================================
# Security (для production)
# ============================================

# CORS allowed origins (разделитель: запятая)
# Пример: http://localhost:5173,https://example.com
# CORS_ORIGINS=http://localhost:5173

# Секретный ключ для JWT (если будет аутентификация)
# JWT_SECRET=your-secret-key-here

# ============================================
# Optional Features
# ============================================

# Включить автоматическое открытие браузера при запуске
# (true/false)
AUTO_OPEN_BROWSER=false

# Включить file watching (автоматическое обновление при изменении файлов)
# (true/false)
ENABLE_FILE_WATCH=true

# Интервал проверки файлов (секунды)
FILE_WATCH_INTERVAL=5

# ============================================
# Performance
# ============================================

# Включить кэширование результатов парсинга
# (true/false)
ENABLE_CACHE=true

# Максимальный размер файла для парсинга (байты)
# 10 MB = 10485760
MAX_FILE_SIZE=10485760

# ============================================
# Database (опционально, для будущего)
# ============================================

# Если в будущем добавишь БД для кэширования

# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/engine_viewer

# SQLite
# DATABASE_PATH=./data/engine_viewer.db

# ============================================
# External Services (опционально)
# ============================================

# Если в будущем добавишь внешние сервисы

# Sentry для error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Analytics
# ANALYTICS_ID=your-analytics-id

# ============================================
# Примечания
# ============================================

# Переменные с префиксом VITE_ доступны в frontend коде
# Пример: import.meta.env.VITE_API_URL

# Переменные БЕЗ префикса VITE_ доступны только в backend

# В production окружении установи NODE_ENV=production

# Для безопасности используй длинные случайные строки для SECRET_KEY
# Генерация: openssl rand -hex 32
